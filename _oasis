Authors:     Mike Wells
License:     BSD-3-clause
Plugins:     META (0.3), DevFiles (0.3)
BuildTools:  ocamlbuild

Library redis
  Path: src
  Findlibname: redis
  Pack: true
  Modules: Redis_sync
  InternalModules: Utils, Client, Cache, Mutex, Make
  BuildDepends: re.str, uuidm

Flag lwt
  Description: Build the Lwt client
  Default: false

Library redis_lwt
  Build$: flag(lwt)
  Install$: flag(lwt)
  Path: src
  Findlibname: lwt
  FindlibParent: redis
  Modules: Redis_lwt
  BuildDepends: lwt.unix, lwt, redis

Flag examples
  Description: Build the examples
  Default: false

Executable redis_examples
  Path: examples
  MainIs: examples.ml
  Build$: flag(examples)
  Install: false
  CompiledObject: best
  BuildDepends: threads, core, redis, redis_lwt, lwt.unix, lwt

Executable test
  Path:                 test
  BuildTools:   ocamlbuild
  MainIs:       test.ml
  BuildDepends:         lwt, lwt.unix, oUnit, redis
  Install:      false
  Build$:       flag(tests)

Test main
  Run$:                 flag(tests)
  Command:      $test
